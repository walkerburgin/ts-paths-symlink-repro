{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "../dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "traceResolution": true,
    "lib": ["es5", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "dom"],
    "baseUrl": ".",
    "paths": {
      "@blueprintjs/core": [
          "../node_modules/@blueprintjs/core"
      ]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
